                        <Insets bottom="20.0" left="10.0" top="50.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#LimpaTela" onKeyPressed="#LimpaTela" prefHeight="37.0" prefWidth="84.0" text="Limpar Tela">
                     <VBox.margin>
                        <Insets left="10.0" top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <Label text="Nome">
                           <HBox.margin>
                              <Insets left="50.0" top="24.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="txtNome" onDragDetected="#LimpaTela">
                           <HBox.margin>
                              <Insets left="15.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label text="Sexo">
                           <HBox.margin>
                              <Insets left="52.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <RadioButton fx:id="rdMasc" mnemonicParsing="false" text="Masculino">
                           <HBox.margin>
                              <Insets left="30.0" top="10.0" />
                           </HBox.margin>
                           <toggleGroup>
                              <ToggleGroup fx:id="tgSexo" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rdFem" mnemonicParsing="false" text="Feminino" toggleGroup="$tgSexo">
                           <HBox.margin>
                              <Insets left="20.0" top="10.0" />
                           </HBox.margin>
                        </RadioButton>
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="10.0">
                     <children>
                        <Label text="Peso">
                           <HBox.margin>
                              <Insets left="50.0" top="24.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="txtPeso">
                           <HBox.margin>
                              <Insets left="15.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="82.0">
                     <children>
                        <Label text="Altura">
                           <HBox.margin>
                              <Insets left="50.0" top="24.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="txtAltura">
                           <HBox.margin>
                              <Insets left="10.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="127.0">
                     <children>
                        <Label text="Resultado">
                           <HBox.margin>
                              <Insets left="50.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextArea fx:id="txtResultado" prefHeight="50.0" prefWidth="100.0">
                           <HBox.margin>
                              <Insets top="30.0" />
                           </HBox.margin>
                        </TextArea>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
